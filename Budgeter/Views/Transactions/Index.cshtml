    <script src="../../dist/js/app.min.js"></script>
    <!-- AdminLTE for demo purposes -->
    <script src="../../dist/js/demo.js"></script>
    <script src="~/basic/js/basic.js"></script>
    <script src="~/basic/js/jquery.simplemodal.js"></script>
    <!-- page script -->
    <script>

  $(function () {
      $("#example1").DataTable(
          {
          "order": [[0, "asc "]]
          });
    $('#example2').DataTable({
      "paging": true,
      "lengthChange": false,
      "searching": false,
      "ordering": true,
      "info": true,
      "autoWidth": false
    });   
  });
    </script>
    <script>
            $('#datepicker').datepicker({
                autoclose: true
            });
    </script>

   
   

</body>
</html>
