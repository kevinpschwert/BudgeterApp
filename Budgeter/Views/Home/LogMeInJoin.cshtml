@model BudgetApp.Models.Invitation

@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Financial Surety</title>
    <!-- Tell the browser to be responsive to screen width -->
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
    <!-- Bootstrap 3.3.6 -->
    <link href="~/bootstrap/css/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/Login.css" rel="stylesheet" />
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.5.0/css/font-awesome.min.css">
    <!-- Ionicons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/ionicons/2.0.1/css/ionicons.min.css">
    <!-- Theme style -->
    <link href="~/dist/css/AdminLTE.css" rel="stylesheet" />
    <link rel="icon" type="image/png" href="~/img/favicon-32x32.png" sizes="32x32" />
    <!-- iCheck -->
    <link href="~/plugins/iCheck/square/blue.css" rel="stylesheet" />

    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
    <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
</head>
<body>
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="pr-wrap">
                    <div class="pass-reset">
                        <label>
                            Enter the email you signed up with
                        </label>
                        <input type="email" placeholder="Email" />
                        <input type="submit" value="Submit" class="pass-reset-submit btn btn-success btn-sm" />
                    </div>
                </div>
                <div class="wrap">
                    <p class="form-title">
                        Register
                    </p>
                    @using (Html.BeginForm("RegisterJoin", "Account", new { code = Model.Code }, FormMethod.Post, null))
                    {
                        <form class="login">
                            @Html.AntiForgeryToken()
                            @Html.ValidationSummary("", new { @class = "text-danger" })
                            <h5 style="color:white">
                                First Name
                            </h5>
                            <div class="form-group has-feedback">
                                <input type="text" style="width: 260px;" name="MyFirstName" id="MyFirstName">
                                <span class="glyphicon glyphicon-user form-control-feedback"></span>
                            </div>
                            <h5 style="color:white">
                                Last Name
                            </h5>
                            <div class="form-group has-feedback">
                                <input type="text" style="width: 260px;" name="MyLastName" id="MyLastName">
                                <span class="glyphicon glyphicon-user form-control-feedback"></span>
                            </div>
                            <h5 style="color:white">
                                Display Name
                            </h5>
                            <div class="form-group has-feedback">
                                <input type="text" style="width: 260px;" name="MyDisplayName" id="MyDisplayName">
                                <span class="glyphicon glyphicon-user form-control-feedback"></span>
                            </div>
                            <h5 style="color:white">
                                Email
                            </h5>
                            <div class="form-group has-feedback">
                                <input type="text" style="width: 260px;" name="MyEmail" id="MyEmail">
                                <span class="glyphicon glyphicon-envelope form-control-feedback"></span>
                            </div>
                            <h5 style="color:white">
                                Password
                            </h5>
                            <div class="form-group has-feedback">
                                <input type="password" style="width: 260px;" name="MyPassword" id="MyPassword">
                                <span class="glyphicon glyphicon-log-in form-control-feedback"></span>
                            </div>
                            <h5 style="color:white">
                                Confirm Password
                            </h5>
                            <div class="form-group has-feedback">
                                <input type="password" style="width: 260px;" name="MyConfirm" id="MyConfirm">
                                <span class="glyphicon glyphicon-log-in form-control-feedback"></span>
                            </div>
                            <h5 style="color:white">
                                PassCode
                            </h5>
                            <div class="form-group has-feedback">
                                <input type="text" style="width: 260px;" name="Hash" id="Hash" value=@ViewBag.Code />
                                <span class="glyphicon glyphicon-log-in form-control-feedback"></span>
                            </div>
                            <div class="row">
                                <div class="col-xs-8">
                                    <input type="submit" class="btn btn-primary" value="Register" />
                                </div><!-- /.col -->
                                <div class="col-xs-4">

                                </div>
                                <!-- /.col -->
                            </div>

                            @*<div class="social-auth-links text-center">
                                    <p>- OR -</p>
                                    <a href="#" class="btn btn-block btn-social btn-facebook btn-flat">
                                        <i class="fa fa-facebook"></i> Sign up using
                                        Facebook
                                    </a>
                                    <a href="#" class="btn btn-block btn-social btn-google btn-flat">
                                        <i class="fa fa-google-plus"></i> Sign up using
                                        Google+
                                    </a>
                                </div>*@

                            <label id="changecolor">
                                <a href="@Url.Action("LogMeIn", "Home")" class="text-center">I already have a membership</a>
                            </label>
                        </form>}
                        </div>
                    
                </div>
                <!-- /.login-box -->
                <!-- jQuery 2.2.3 -->
                <script src="~/plugins/jQuery/jquery-2.2.3.min.js"></script>
                <!-- Bootstrap 3.3.6 -->
                <script src="~/bootstrap/js/bootstrap.js"></script>
                <!-- iCheck -->
                <script src="~/plugins/iCheck/icheck.js"></script>
                <script>
                    $(function () {
                        $('input').iCheck({
                            checkboxClass: 'icheckbox_square-blue',
                            radioClass: 'iradio_square-blue',
                            increaseArea: '20%' // optional
                        });
                    });
                </script>
</body>
</html>
